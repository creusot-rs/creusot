pin-depends: [
  [ "why3.git-5d13" "git+https://gitlab.inria.fr/why3/why3.git#5d13eab26ed" ]
  [ "why3-ide.git-5d13" "git+https://gitlab.inria.fr/why3/why3.git#5d13eab26ed" ]
