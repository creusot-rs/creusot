  let rec max_usize (a: UInt64.t) (b: UInt64.t) (return (x: UInt64.t)) = (! bb0
    [ bb0 = s0 [ s0 = [ &_6 <- UInt64.lt a b ] s1 | s1 = any [ br0 -> {_6 = false} (! bb2) | br1 -> {_6} (! bb1) ] ]
    | bb1 = s0 [ s0 = [ &_ret <- b ] s1 | s1 = bb3 ]
    | bb2 = s0 [ s0 = [ &_ret <- a ] s1 | s1 = bb3 ]
    | bb3 = return {_ret} ]
    [ & _ret: UInt64.t = Any.any_l () | & a: UInt64.t = a | & b: UInt64.t = b | & _6: bool = Any.any_l () ])
    [ return (result: UInt64.t) -> {[@expl:max_usize ensures] UInt64.t'int result
