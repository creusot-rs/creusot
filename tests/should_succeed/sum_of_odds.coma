  let rec test (x: UInt32.t) (return (x'0: ())) = {[@expl:test requires] UInt32.t'int x < 65536}
    (! bb0
    [ bb0 = s0
      [ s0 = compute_sum_of_odd {x} (fun (_x: UInt32.t) -> [ &y <- _x ] s1)
      | s1 = {[@expl:assertion] let _ = sum_of_odd_is_sqr (UInt32.t'int x) in is_square (UInt32.t'int y)} s2
      | s2 = return {_ret} ] ] [ & _ret: () = Any.any_l () | & x: UInt32.t = x | & y: UInt32.t = Any.any_l () ])
    [ return (result: ()) -> (! return {result}) ]
