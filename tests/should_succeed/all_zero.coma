module M_all_zero
  use creusot.int.UInt32
  use mach.int.Int
  use creusot.prelude.MutBorrow
  use creusot.prelude.Any
  
  type t_List = Cons UInt32.t t_List | Nil
  
  function len (self: t_List) : int = match self with
      | Cons _ ls -> 1 + len ls
      | Nil -> 0
      end
  
  function fin_Snapshot_ref_List [@inline:trivial] (self: MutBorrow.t t_List) : t_List = self.final
  
  meta "rewrite_def" function fin_Snapshot_ref_List
  
  type t_Option_u32 = None | Some UInt32.t
  
  function get (self: t_List) (ix: int) : t_Option_u32 = match self with
      | Cons x ls -> if ix = 0 then Some x else get ls (ix - 1)
      | Nil -> None
      end
  
  let rec elim_Cons (input: t_List) (ret (f0: UInt32.t) (f1: t_List)) = any
    [ good (f0: UInt32.t) (f1: t_List) -> {Cons f0 f1 = input} (! ret {f0} {f1})
    | bad -> {forall f0: UInt32.t, f1: t_List [Cons f0 f1: t_List]. Cons f0 f1 <> input} (! {false} any) ]
  
  predicate resolve_ref_u32 [@inline:trivial] (_1: MutBorrow.t UInt32.t) = _1.final = _1.current
  
  meta "rewrite_def" predicate resolve_ref_u32
  
  predicate resolve_ref_List [@inline:trivial] (_1: MutBorrow.t t_List) = _1.final = _1.current
  
  meta "rewrite_def" predicate resolve_ref_List
  
  predicate resolve_ref_Box_List_Global [@inline:trivial] (_1: MutBorrow.t t_List) = _1.final = _1.current
  
  meta "rewrite_def" predicate resolve_ref_Box_List_Global
  
  meta "compute_max_steps" 1000000
  
  meta "select_lsinst" "all"
  
  let rec all_zero (l: MutBorrow.t t_List) (return (x: ())) = (! bb0
    [ bb0 = s0 [ s0 = [ &old_l <- l ] s1 | s1 = bb1 ]
    | bb1 = s0 [ s0 = [ &loop_l <- l ] s1 | s1 = bb2 ]
    | bb2 = bb2
      [ bb2 = {[@expl:loop invariant #0] (forall i: int. 0 <= i /\ i < len loop_l.current
            -> get loop_l.final i = Some (0: UInt32.t))
        -> (forall i: int. 0 <= i /\ i < len old_l.current -> get (fin_Snapshot_ref_List old_l) i = Some (0: UInt32.t))}
        {[@expl:loop invariant #1] len loop_l.final = len loop_l.current
        -> len (fin_Snapshot_ref_List old_l) = len old_l.current}
        (! s0)
        [ s0 = bb3 ]
        [ bb3 = any
          [ br0 (x0: UInt32.t) (x1: t_List) -> {loop_l.current = Cons x0 x1} (! bb5)
          | br1 -> {loop_l.current = Nil} (! bb6) ]
        | bb5 = s0
          [ s0 = elim_Cons {loop_l.current}
              (fun (r0: UInt32.t) (r1: t_List) ->
                MutBorrow.borrow_final <UInt32.t> {r0} {MutBorrow.inherit_id (MutBorrow.get_id loop_l) 1}
                  (fun (_ret: MutBorrow.t UInt32.t) ->
                    [ &value <- _ret ] [ &loop_l <- { loop_l with current = Cons _ret.final r1 } ] s1))
          | s1 = elim_Cons {loop_l.current}
              (fun (r0: UInt32.t) (r1: t_List) ->
                MutBorrow.borrow_final <t_List> {r1} {MutBorrow.inherit_id (MutBorrow.get_id loop_l) 2}
                  (fun (_ret: MutBorrow.t t_List) ->
                    [ &next <- _ret ] [ &loop_l <- { loop_l with current = Cons r0 _ret.final } ] s2))
          | s2 = [ &value <- { value with current = (0: UInt32.t) } ] s3
          | s3 = -{resolve_ref_u32 value}- s4
          | s4 = MutBorrow.borrow_final <t_List> {next.current} {MutBorrow.get_id next}
              (fun (_ret: MutBorrow.t t_List) -> [ &_21 <- _ret ] [ &next <- { next with current = _ret.final } ] s5)
          | s5 = -{resolve_ref_List loop_l}- s6
          | s6 = [ &loop_l <- _21 ] s7
          | s7 = -{resolve_ref_Box_List_Global next}- s8
          | s8 = bb2 ] ] ]
    | bb6 = s0 [ s0 = -{resolve_ref_List loop_l}- s1 | s1 = return {_0} ] ]
    [ & _0: () = Any.any_l ()
    | & l: MutBorrow.t t_List = l
    | & old_l: MutBorrow.t t_List = Any.any_l ()
    | & loop_l: MutBorrow.t t_List = Any.any_l ()
    | & value: MutBorrow.t UInt32.t = Any.any_l ()
    | & next: MutBorrow.t t_List = Any.any_l ()
    | & _21: MutBorrow.t t_List = Any.any_l () ])
    [ return (result: ()) -> {[@expl:all_zero ensures #0] forall i: int. 0 <= i /\ i < len l.current
        -> get l.final i = Some (0: UInt32.t)}
      {[@expl:all_zero ensures #1] len l.current = len l.final}
      (! return {result}) ]
end
